@model IEnumerable<eDISC.Models.Disc>

@{
    ViewData["Title"] = "Index";
}


<img style="max-width: 80%" src="../Images-Edisc/prodigyHeader.png"/>

<h2 class="discsHeader">All Discs</h2>

<div class="DiscsContainer">
    @foreach(var item in Model)
    {
        <div class="card">
            <img class="card-img-top" src="@item.ImageUrl" alt="disc"/>
            <div class="card-body">
                <h5 class="card-title">@item.NamePlastic"</h5>
                <p class="card-text"> @Html.ActionLink("Details", "Details", new { id=item.Id }) </p>
            </div>
        </div>
    }
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

         